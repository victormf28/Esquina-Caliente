.l-main
   display: flex;
   flex-direction: column;
   position: relative;
   height: 100vh;
   
.l-main__background
   width: 100%;
   height: 100%;
   position: absolute;
   background: rgba(48, 49, 51, 0.8);
   z-index: 10;
   opacity: 0;
   visibility: hidden;
   transition: .2s linear;
   &.is-active
      opacity: 1;
      visibility: visible;

.l-main__header
   display: flex;
   align-items: center;
   flex-direction: row;
   padding: 10px 0;
   box-shadow: 0px 2px 12px rgba(0,0,0,.1);
   z-index: 5;

.l-main__header-icon
   cursor: pointer;
   width: 40px;
   margin-right: 10px;
